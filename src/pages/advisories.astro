---
import BaseLayout from '../layouts/BaseLayout.astro';
import { withBase } from '../config/site';
---

<BaseLayout
  title="Advisories"
  description="Advisory content is published through the blog with advisory tagging."
  canonicalPath="/advisories"
>
  <section class="card p-8">
    <h1 class="font-display text-4xl font-bold">Advisories</h1>
    <p class="mt-4 text-sm leading-7 text-text-soft">
      Advisory updates are currently published via the blog using the <strong>#advisory</strong> tag.
    </p>
    <a class="mt-5 inline-flex rounded-full bg-brand px-5 py-2 text-sm font-semibold text-white" href={withBase('/blog')}>
      Browse Blog
    </a>
  </section>
</BaseLayout>
