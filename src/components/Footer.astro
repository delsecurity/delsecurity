---
import { CONTACT, LEGAL_ITEMS, SITE, withBase } from '../config/site';
---

<footer class="mt-20 border-t border-line bg-surface/70">
  <div class="container-shell grid gap-10 py-12 md:grid-cols-3">
    <div>
      <h2 class="font-display text-lg font-semibold">{SITE.name}</h2>
      <p class="mt-3 text-sm text-text-soft">{SITE.tagline}</p>
    </div>
    <div>
      <h2 class="font-display text-sm font-semibold uppercase tracking-wide text-text-soft">Legal</h2>
      <ul class="mt-3 space-y-2 text-sm">
        {LEGAL_ITEMS.map((item) => (
          <li>
            <a class="text-text hover:text-brand" href={withBase(item.href)}>{item.label}</a>
          </li>
        ))}
      </ul>
    </div>
    <div>
      <h2 class="font-display text-sm font-semibold uppercase tracking-wide text-text-soft">Security Contact</h2>
      <ul class="mt-3 space-y-2 text-sm text-text">
        <li>
          <a class="hover:text-brand" href={`mailto:${CONTACT.securityEmail}`}>{CONTACT.securityEmail}</a>
        </li>
        <li>
          <a class="hover:text-brand" href={withBase(CONTACT.pgpPath)}>PGP Public Key</a>
        </li>
      </ul>
    </div>
  </div>
</footer>
